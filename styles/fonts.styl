@font-face {
    font-family: 'MarvelWeb';
    src: url('assets/fonts/marvel-bold-webfont.eot');
    src: url('assets/fonts/marvel-bold-webfont.eot?#iefix') format('embedded-opentype'),
         url('assets/fonts/marvel-bold-webfont.woff') format('woff'),
         url('assets/fonts/marvel-bold-webfont.ttf') format('truetype'),
         url('assets/fonts/marvel-bold-webfont.svg#marvelbold') format('svg');
    font-weight: bold;
    font-style: normal;

}

@font-face {
    font-family: 'MarvelWeb';
    src: url('assets/fonts/marvel-regular-webfont.eot');
    src: url('assets/fonts/marvel-regular-webfont.eot?#iefix') format('embedded-opentype'),
         url('assets/fonts/marvel-regular-webfont.woff') format('woff'),
         url('assets/fonts/marvel-regular-webfont.ttf') format('truetype'),
         url('assets/fonts/marvel-regular-webfont.svg#marvelregular') format('svg');
    font-weight: normal;
    font-style: normal;

}

$fonts = "MarvelWeb", "Marvel", Tahoma
$fsize = 24px

body
  font-family: $fonts
  font-size: $fsize
  font-weight: bold

input, label, textarea, button
  font-family: $fonts
